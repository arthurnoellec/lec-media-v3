<style>
  .navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 20px;
    background-color: rgba(30, 30, 30, 0.8);
    backdrop-filter: blur(10px);
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    box-shadow: 0 2px 15px rgba(0, 0, 0, 0.3);
    width: 75%;
    margin: auto;
    margin-top: 20px;
    border-radius: 32rem;
    max-width: 1200px;
    transition: background-color 0.3s ease;
  }

  [data-theme="light"] .navbar {
    background-color: rgba(240, 240, 240, 0.8);
    box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
  }

  .nav-menu {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
  }

  .nav-left {
    display: flex;
    width: 30%;
  }

  .logo {
    display: flex;
    align-items: center;
    text-decoration: none;
  }

  .logo img {
    height: 40px;
    margin-right: 10px;
  }

  .nav-item {
    position: relative;
  }

  .nav-link {
    color: #b0b0b0;
    text-decoration: none;
    font-weight: 500;
    padding: 10px 15px;
    border-radius: 8px;
    transition:
      color 0.3s,
      background-color 0.3s;
    cursor: pointer;
  }

  [data-theme="light"] .nav-link {
    color: #555;
  }

  .nav-link:hover {
    color: #4ca6ff;
  }

  .nav-link.active {
    color: #4ca6ff;
    background-color: rgba(76, 166, 255, 0.1);
  }

  .dropdown {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    background-color: #2a2a2a;
    min-width: 250px;
    border-radius: 10px;
    padding: 15px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
    z-index: 1000;
    margin-top: 25px;
    transition: background-color 0.3s ease;
  }

  [data-theme="light"] .dropdown {
    background-color: #f0f0f0;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .dropdown.show {
    display: block;
  }

  .dropdown-item {
    display: flex;
    align-items: center;
    padding: 10px;
    border-radius: 8px;
    text-decoration: none;
    color: #e0e0e0;
    transition: background-color 0.3s;
  }

  [data-theme="light"] .dropdown-item {
    color: #333;
  }

  .dropdown-item:hover {
    background-color: rgba(76, 166, 255, 0.1);
  }

  .dropdown-icon {
    width: 24px;
    height: 24px;
    margin-right: 12px;
    stroke: #4ca6ff;
    fill: none;
    stroke-width: 2;
  }

  .dropdown-title {
    color: #4ca6ff;
    font-weight: 600;
    margin-bottom: 3px;
    font-size: 0.9rem;
  }

  .dropdown-description {
    color: #a0a0a0;
    font-size: 0.7rem;
  }

  [data-theme="light"] .dropdown-description {
    color: #666;
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 20px;
    width: 30%;
    justify-content: end;
  }

  .contact-btn {
    background-color: #02f791;
    color: rgb(0, 0, 0);
    padding: 10px 20px;
    border-radius: 30px;
    text-decoration: none;
    font-weight: 600;
    transition: background-color 0.3s;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .contact-btn:hover {
    background-color: #1e4bff;
  }

  .contact-btn svg {
    stroke: rgb(0, 0, 0);
    width: 16px;
    height: 16px;
  }

  /* Theme Switch Styles */
  .theme-switch-wrapper {
    display: flex;
    align-items: center;
  }

  .theme-switch {
    display: inline-block;
    height: 34px;
    position: relative;
    width: 60px;
  }

  .theme-switch input {
    display: none;
  }

  .slider {
    background-color: #333;
    bottom: 0;
    cursor: pointer;
    left: 0;
    position: absolute;
    right: 0;
    top: 0;
    transition: 0.4s;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 5px;
  }

  [data-theme="light"] .slider {
    background-color: #f0f0f0;
  }

  .slider:before {
    background-color: #1fbe7c;
    bottom: 4px;
    content: "";
    height: 26px;
    left: 4px;
    position: absolute;
    transition: 0.4s;
    width: 26px;
    z-index: 2;
  }

  input:checked + .slider:before {
    transform: translateX(26px);
  }

  .slider.round {
    border-radius: 34px;
  }

  .slider.round:before {
    border-radius: 50%;
  }

  .sun-icon,
  .moon-icon {
    width: 16px;
    height: 16px;
    color: #fff;
    z-index: 1;
  }

  [data-theme="light"] .sun-icon {
    color: #f39c12;
  }

  [data-theme="light"] .moon-icon {
    color: #555;
  }

  .sun-icon {
    margin-left: 5px;
  }

  .moon-icon {
    margin-right: 5px;
  }

  /* Media Queries pour la responsivité */
  @media (max-width: 992px) {
    .navbar {
      width: 90%;
    }
  }

  @media (max-width: 768px) {
    .navbar {
      width: 95%;
      border-radius: 16px;
      margin-top: 10px;
    }

    .nav-menu {
      flex-direction: column;
      gap: 15px;
    }

    .nav-left {
      width: 100%;
      justify-content: center;
    }

    .nav-right {
      width: 100%;
      justify-content: center;
    }

    .dropdown {
      left: 50%;
      transform: translateX(-50%);
      min-width: 280px;
    }
  }
</style>

<script>
  // Gestion des dropdowns
  document.addEventListener("DOMContentLoaded", () => {
    const navLinks = document.querySelectorAll(".nav-link[data-dropdown]");

    navLinks.forEach((link) => {
      link.addEventListener("click", (e) => {
        const dropdownId = `${link.getAttribute("data-dropdown")}-dropdown`;
        const dropdown = document.getElementById(dropdownId);

        // Ferme tous les autres dropdowns
        document.querySelectorAll(".dropdown").forEach((d) => {
          if (d.id !== dropdownId) {
            d.classList.remove("show");
          }
        });

        // Toggle le dropdown actuel
        dropdown.classList.toggle("show");
        e.stopPropagation();
      });
    });

    // Ferme les dropdowns quand on clique ailleurs
    document.addEventListener("click", () => {
      document.querySelectorAll(".dropdown").forEach((dropdown) => {
        dropdown.classList.remove("show");
      });
    });

    // Empêche la fermeture quand on clique sur le dropdown lui-même
    document.querySelectorAll(".dropdown").forEach((dropdown) => {
      dropdown.addEventListener("click", (e) => {
        e.stopPropagation();
      });
    });

    // Gestion du thème sombre/clair
    const themeSwitch = document.getElementById("checkbox");

    // Vérifie si un thème est enregistré dans localStorage
    const currentTheme = localStorage.getItem("theme") || "dark";

    // Applique le thème initial
    document.documentElement.setAttribute("data-theme", currentTheme);

    // Met à jour l'état du switch selon le thème
    if (currentTheme === "light") {
      themeSwitch.checked = true;
    }

    // Écoute les changements du switch
    themeSwitch.addEventListener("change", function () {
      if (this.checked) {
        document.documentElement.setAttribute("data-theme", "light");
        localStorage.setItem("theme", "light");
      } else {
        document.documentElement.setAttribute("data-theme", "dark");
        localStorage.setItem("theme", "dark");
      }
    });
  });
</script>
