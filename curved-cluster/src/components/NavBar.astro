    </div>

    <!-- Logo - centered on mobile -->
    <a href="/" class="logo">
      <img src={logo.src} alt="LEC Media Logo" />
    </a>

    <!-- Theme Switcher & Contact button -->
    <div class="contact-button-container">
      <!-- Theme Switcher -->
      <div class="theme-switch-wrapper">
        <label class="theme-switch" for="checkbox">
          <input type="checkbox" id="checkbox" />
          <div class="slider round">
            <svg
              class="sun-icon"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round">
              <circle cx="12" cy="12" r="5"></circle>
              <line x1="12" y1="1" x2="12" y2="3"></line>
              <line x1="12" y1="21" x2="12" y2="23"></line>
              <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
              <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
              <line x1="1" y1="12" x2="3" y2="12"></line>
              <line x1="21" y1="12" x2="23" y2="12"></line>
              <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
              <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
            </svg>
            <svg
              class="moon-icon"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round">
              <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
            </svg>
          </div>
        </label>
      </div>

      <!-- Contact Button -->
      <a href="/agence-cro#contact">
        <button
          class="button"
          style="background-color: #08f791; border-radius: 50px; padding: 10px 20px; border: none; font-weight: 700; cursor: pointer;">
          Nous contacter
        </button>
      </a>
    </div>
  </div>
</nav>

<style>
  :root {
    --primary-bg: rgba(30, 30, 30, 0.8);
    --primary-text: #b0b0b0;
    --primary-shadow: rgba(0, 0, 0, 0.3);
    --primary-accent: #08f791;
    --dropdown-bg: #2a2a2a;
    --dropdown-text: #e0e0e0;
    --dropdown-desc: #a0a0a0;
    --dropdown-shadow: rgba(0, 0, 0, 0.5);
  }

  [data-theme="light"] {
    --primary-bg: rgba(240, 240, 240, 0.8);
    --primary-text: #555;
    --primary-shadow: rgba(0, 0, 0, 0.1);
    --primary-accent: #08f791;
    --dropdown-bg: #f0f0f0;
    --dropdown-text: #333;
    --dropdown-desc: #666;
    --dropdown-shadow: rgba(0, 0, 0, 0.1);
  }

  [data-theme="light"] .logo {
    filter: invert();
  }

  .navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 20px;
    background-color: var(--primary-bg);
    backdrop-filter: blur(10px);
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    box-shadow: 0 2px 15px var(--primary-shadow);
    width: 90%;
    margin: auto;
    margin-top: 20px;
    border-radius: 32rem;
    max-width: 1200px;
    transition: background-color 0.3s ease;
  }

  .logo {
    display: flex;
    align-items: center;
    text-decoration: none;
    width: 30%;
    justify-content: center;
  }

  .logo img {
    height: 40px;
    margin-right: 10px;
  }

  .logo-text {
    color: #4ca6ff;
    font-size: 24px;
    font-weight: bold;
  }

  .nav-menu {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 30px;
    width: 100%;
  }

  .nav-items-container {
    display: flex;
    width: 30%;
  }

  .nav-item {
    position: relative;
  }

  .nav-link {
    color: var(--primary-text);
    text-decoration: none;
    font-weight: 500;
    padding: 10px 15px;
    border-radius: 8px;
    transition:
      color 0.3s,
      background-color 0.3s;
    cursor: pointer;
  }

  .nav-link:hover {
    color: var(--primary-accent);
  }

  .nav-link.active {
    color: var(--primary-accent);
    background-color: rgba(8, 247, 145, 0.1);
  }

  .dropdown {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    background-color: var(--dropdown-bg);
    min-width: 250px;
    border-radius: 10px;
    padding: 15px;
    box-shadow: 0 10px 30px var(--dropdown-shadow);
    z-index: 1000;
    margin-top: 25px;
  }

  .dropdown.show {
    display: block;
  }

  .dropdown-item {
    display: flex;
    align-items: center;
    padding: 10px;
    border-radius: 8px;
    text-decoration: none;
    color: var(--dropdown-text);
    transition: background-color 0.3s;
  }

  .dropdown-item:hover {
    background-color: rgba(8, 247, 145, 0.1);
  }

  .dropdown-icon {
    width: 24px;
    height: 24px;
    margin-right: 12px;
    stroke: var(--primary-accent);
    fill: none;
    stroke-width: 2;
  }

  .dropdown-content {
    display: flex;
    flex-direction: column;
  }

  .dropdown-title {
    color: var(--primary-accent);
    font-weight: 600;
    margin-bottom: 3px;
    font-size: 0.9rem;
  }

  .dropdown-description {
    color: var(--dropdown-desc);
    font-size: 0.7rem;
  }

  .contact-btn {
    background-color: var(--primary-accent);
    color: #121212;
    padding: 10px 20px;
    border-radius: 30px;
    text-decoration: none;
    font-weight: 600;
    transition: background-color 0.3s;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .contact-btn:hover {
    background-color: #08f78f8a;
  }

  .contact-btn svg {
    stroke: #121212;
    width: 20px;
    height: 20px;
  }

  /* Theme Switch Styles */
  .theme-switch-wrapper {
    display: flex;
    align-items: center;
    margin-right: 15px;
  }

  .theme-switch {
    display: inline-block;
    height: 34px;
    position: relative;
    width: 60px;
  }

  .theme-switch input {
    display: none;
  }

  .slider {
    background-color: #333;
    bottom: 0;
    cursor: pointer;
    left: 0;
    position: absolute;
    right: 0;
    top: 0;
    transition: 0.4s;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 5px;
  }

  [data-theme="light"] .slider {
    background-color: #f0f0f0;
  }

  .slider:before {
    background-color: var(--primary-accent);
    bottom: 4px;
    content: "";
    height: 26px;
    left: 4px;
    position: absolute;
    transition: 0.4s;
    width: 26px;
    z-index: 2;
  }

  input:checked + .slider:before {
    transform: translateX(26px);
  }

  .slider.round {
    border-radius: 34px;
  }

  .slider.round:before {
    border-radius: 50%;
  }

  .sun-icon,
  .moon-icon {
    width: 16px;
    height: 16px;
    color: #fff;
    z-index: 1;
  }

  [data-theme="light"] .sun-icon {
    color: #f39c12;
  }

  [data-theme="light"] .moon-icon {
    color: #555;
  }

  .sun-icon {
    margin-left: 5px;
  }

  .moon-icon {
    margin-right: 5px;
  }

  /* Mobile menu */
  .hamburger {
    display: none;
    cursor: pointer;
    background: none;
    border: none;
    padding: 5px;
  }

  .hamburger-line {
    display: block;
    width: 25px;
    height: 3px;
    margin: 5px 0;
    background-color: var(--primary-accent);
    border-radius: 3px;
    transition: all 0.3s ease;
  }

  .contact-button-container {
    display: flex;
    align-items: center;
  }

  .theme-switch-wrapper-mobile {
    display: none;
    margin: 15px auto;
    justify-content: center;
  }
  .contact-button-container {
    width: 30%;
    display: flex;
    justify-content: flex-end;
  }

  @media screen and (max-width: 480px) {
    .theme-switch-wrapper-mobile {
      display: flex;
    }
  }

  /* Media queries for responsive design */
  @media screen and (max-width: 992px) {
    .navbar {
      width: 95%;
      padding: 8px 15px;
      border-radius: 20px;
    }

    .nav-link.active {
      color: #ffffff;
      background-color: rgba(8, 247, 143, 0);
    }
  }

  /* Tablet and smaller screens */
  @media screen and (max-width: 768px) {
    .navbar {
      margin-top: 10px;
    }

    .hamburger {
      display: block;
      order: 1;
      z-index: 1100;
    }

    .logo {
      order: 2;
      margin: 0 auto;
    }

    .nav-menu {
      justify-content: space-between;
      gap: 10px;
    }

    .nav-items-container {
      position: fixed;
      top: 0;
      left: -100%;
      flex-direction: column;
      width: 80%;
      height: 100vh;
      padding: 70px 20px 20px;
      background-color: var(--primary-bg);
      backdrop-filter: blur(10px);
      transition: all 0.4s ease;
      z-index: 1050;
      border-radius: 2rem;
    }

    .nav-items-container.active {
      left: 0;
      width: calc(100% - 40px);
    }

    .nav-item {
      width: 100%;
      margin: 10px 0;
    }

    .nav-link {
      display: block;
      padding: 15px;
      font-size: 18px;
    }

    .dropdown {
      position: static;
      margin-top: 5px;
      margin-bottom: 15px;
      box-shadow: none;
    }

    .contact-button-container {
      order: 3;
    }

    button.button {
      padding: 8px 12px !important;
      font-size: 14px;
    }
  }

  /* Small mobile screens */
  @media screen and (max-width: 480px) {
    .navbar {
      width: 90%;
      padding: 8px 10px;
      border-radius: 15px;
    }

    .logo img {
      height: 30px;
    }

    button.button {
      padding: 6px 10px !important;
      font-size: 12px;
    }

    .dropdown {
      padding: 10px;
    }

    /* Adjust hamburger menu when open */
    .hamburger.active .hamburger-line:nth-child(1) {
      transform: translateY(8px) rotate(45deg);
    }

    .hamburger.active .hamburger-line:nth-child(2) {
      opacity: 0;
    }

    .hamburger.active .hamburger-line:nth-child(3) {
      transform: translateY(-8px) rotate(-45deg);
    }

    .contact-button-container {
      display: none;
    }

    .logo {
      width: 100%;
      display: flex;
      justify-content: center;
      margin-left: -30px;
    }
  }
</style>

<script>
  // Attendre que le DOM soit chargé
  document.addEventListener("DOMContentLoaded", () => {
    // Éléments du menu
    const hamburgerBtn = document.getElementById("hamburgerBtn");
    const mobileMenu = document.getElementById("mobileMenu");

    // Éléments des dropdowns
    const servicesLink = document.getElementById("servicesLink");
    const casLink = document.getElementById("casLink");
    const blogsLink = document.getElementById("blogsLink");

    const servicesDropdown = document.getElementById("servicesDropdown");
    const casDropdown = document.getElementById("casDropdown");
    const blogsDropdown = document.getElementById("blogsDropdown");

    // Gérer le menu mobile
    if (hamburgerBtn) {
      hamburgerBtn.addEventListener("click", () => {
        hamburgerBtn.classList.toggle("active");
        if (mobileMenu) {
          mobileMenu.classList.toggle("active");
        }
      });
    }

    // Fonction pour fermer tous les dropdowns
    const closeAllDropdowns = () => {
      const allDropdowns = document.querySelectorAll(".dropdown");
      const allNavLinks = document.querySelectorAll(".nav-link");

      allDropdowns.forEach((dropdown) => {
        dropdown.classList.remove("show");
      });

      allNavLinks.forEach((link) => {
        link.classList.remove("active");
      });
    };

    // Gérer les dropdowns
    const setupDropdown = (linkElement, dropdownElement) => {
      if (linkElement && dropdownElement) {
        linkElement.addEventListener("click", (event) => {
          event.stopPropagation();

          // Si ce dropdown est déjà ouvert, le fermer
          if (dropdownElement.classList.contains("show")) {
            dropdownElement.classList.remove("show");
            linkElement.classList.remove("active");
            return;
          }

          // Fermer tous les dropdowns d'abord
          closeAllDropdowns();

          // Afficher le dropdown actuel
          dropdownElement.classList.add("show");
          linkElement.classList.add("active");
        });
      }
    };

    // Configurer chaque dropdown
    setupDropdown(servicesLink, servicesDropdown);
    setupDropdown(casLink, casDropdown);
    setupDropdown(blogsLink, blogsDropdown);

    // Fermer les dropdowns quand on clique ailleurs sur la page
    document.addEventListener("click", (event) => {
      if (!event.target.closest(".nav-item")) {
        closeAllDropdowns();
      }
    });

    // Fermer le menu mobile quand on clique sur un lien
    const mobileLinks = document.querySelectorAll(".nav-items-container a");
    mobileLinks.forEach((link) => {
      link.addEventListener("click", () => {
        if (mobileMenu) {
          mobileMenu.classList.remove("active");
        }
        if (hamburgerBtn) {
          hamburgerBtn.classList.remove("active");
        }
      });
    });

    // Gestion du thème sombre/clair
    const themeSwitch = document.getElementById("checkbox");
    const themeSwitchMobile = document.getElementById("checkbox-mobile");

    // Vérifie si un thème est enregistré dans localStorage
    const currentTheme = localStorage.getItem("theme") || "dark";

    // Applique le thème initial
    document.documentElement.setAttribute("data-theme", currentTheme);

    // Met à jour l'état des switchs selon le thème
    if (currentTheme === "light") {
      themeSwitch.checked = true;
      if (themeSwitchMobile) themeSwitchMobile.checked = true;
    }

    // Fonction pour changer le thème
    const toggleTheme = function (isLight) {
      if (isLight) {
        document.documentElement.setAttribute("data-theme", "light");
        localStorage.setItem("theme", "light");
      } else {
        document.documentElement.setAttribute("data-theme", "dark");
        localStorage.setItem("theme", "dark");
      }
    };

    // Écoute les changements des switchs
    themeSwitch.addEventListener("change", function () {
      toggleTheme(this.checked);
      if (themeSwitchMobile) themeSwitchMobile.checked = this.checked;
    });

    if (themeSwitchMobile) {
      themeSwitchMobile.addEventListener("change", function () {
        toggleTheme(this.checked);
        themeSwitch.checked = this.checked;
      });
    }

    // Nous avons retiré l'ajout automatique du switcher au menu mobile
    // Le switcher reste uniquement dans la zone "Nous contacter"
  });
</script>
