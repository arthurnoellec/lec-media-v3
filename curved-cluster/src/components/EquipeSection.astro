---
// EquipeSection.astro

import { Icon } from 'astro-icon/components';
import arthur from '../assets/Arthur.png';
import tristan from '../assets/tristan.jpeg';
---

<section class="equipe-section" id="equipe">
  <div class="container">
    <div class="section-header">
      <span class="section-tag">Notre équipe</span>
      <h2 class="section-title">Les <span class="gradient-text">experts</span> qui transformeront votre boutique</h2>
      <p class="section-subtitle">
        Découvrez les talents spécialisés qui travailleront sur la refonte de votre boutique Shopify pour maximiser son potentiel.
      </p>
    </div>

    <div class="team-grid">
      <div class="team-member">
        <div class="member-photo">
          <img src={arthur.src} alt="Arthur Noëllec" />
          <div class="member-social">
            <a href="https://www.linkedin.com/in/arthur-no%C3%ABllec/" class="social-link">
              <Icon name="tabler:brand-linkedin" />
            </a>
            <a href="https://www.youtube.com/@arthurlecmedia" class="social-link">
              <Icon name="tabler:brand-youtube" />
            </a>
          </div>
        </div>
        <div class="member-info">
          <h3 class="member-name">Arthur Noëllec</h3>
          <span class="member-role">CEO</span>
          <p class="member-description">
            7+ ans d'expérience dans le lancement et la refonte de boutiques Shopify.
          </p>
          <div class="member-skills">
            <span class="skill">Stratégie e-commerce</span>
            <span class="skill">Optimisation conversion</span>
            <span class="skill">Gestion de projet</span>
          </div>
        </div>
      </div>

      <div class="team-member">
        <div class="member-photo">
          <img src={tristan.src} alt="Tristan Noëllec" />
          <div class="member-social">
            <a href="https://www.youtube.com/@soxusb" class="social-link">
              <Icon name="tabler:brand-youtube" />
            </a>
            <a href="https://www.instagram.com/soxu_sb/" class="social-link">
              <Icon name="tabler:brand-instagram" />
            </a>
          </div>
        </div>
        <div class="member-info">
          <h3 class="member-name">Tristan Noëllec</h3>
          <span class="member-role">Designer UX/UI </span>
          <p class="member-description">
            Expert en design d'interfaces e-commerce qui convertissent. Spécialiste des parcours d'achat optimisés.
          </p>
          <div class="member-skills">
            <span class="skill">Design UI/UX</span>
            <span class="skill">Responsive design</span>
            <span class="skill">Tests utilisateurs</span>
          </div>
        </div>
      </div>

      <div class="team-member">
        <div class="member-photo">
          <!-- <img src="/images/member-3.jpg" alt="Emma Laurent" /> -->
          <div class="member-social">
            <!-- <a href="#" class="social-link">
              <Icon name="tabler:brand-linkedin" />
            </a>
            <a href="#" class="social-link">
              <Icon name="tabler:brand-github" />
            </a> -->
          </div>
        </div>
        <div class="member-info">
          <h3 class="member-name">Romain S-C</h3>
          <span class="member-role">Développeur Shopify</span>
          <p class="member-description">
            Expert technique en personnalisation avancée de Shopify. Maîtrise du Liquid, des API et de l'optimisation des performances.
          </p>
          <div class="member-skills">
            <span class="skill">Liquid</span>
            <span class="skill">JavaScript</span>
            <span class="skill">API Shopify</span>
          </div>
        </div>
      </div>

      <div class="team-member">
        <div class="member-photo">
          <!-- <img src="/images/member-4.jpg" alt="Julien Moreau" /> -->
          <div class="member-social">
            <!-- <a href="#" class="social-link">
              <Icon name="tabler:brand-linkedin" />
            </a>
            <a href="#" class="social-link">
              <Icon name="tabler:brand-youtube" />
            </a> -->
          </div>
        </div>
        <div class="member-info">
          <h3 class="member-name">Anthony Moreau</h3>
          <span class="member-role">Spécialiste SEO & Analytics</span>
          <p class="member-description">
            Expert en optimisation pour les moteurs de recherche et analyse de données pour e-commerce à forte croissance.
          </p>
          <div class="member-skills">
            <span class="skill">SEO technique</span>
            <span class="skill">Google Analytics</span>
            <span class="skill">Marketing digital</span>
          </div>
        </div>
      </div>
    </div>

    <div class="expertise-container">
      <div class="expertise-header">
        <h3 class="expertise-title">Expertise complète</h3>
        <p class="expertise-description">Notre équipe couvre tous les aspects nécessaires à une refonte réussie</p>
      </div>
      <div class="expertise-grid">
        <div class="expertise-item">
          <div class="expertise-icon">
            <Icon name="tabler:device-analytics" />
          </div>
          <span class="expertise-name">Audit complet</span>
        </div>
        <div class="expertise-item">
          <div class="expertise-icon">
            <Icon name="simple-icons:shopify" />
          </div>
          <span class="expertise-name">Shopify Plus</span>
        </div>
        <div class="expertise-item">
          <div class="expertise-icon">
            <Icon name="tabler:shopping-cart" />
          </div>
          <span class="expertise-name">Tunnel d'achat</span>
        </div>
        <div class="expertise-item">
          <div class="expertise-icon">
            <Icon name="tabler:device-mobile" />
          </div>
          <span class="expertise-name">Mobile-first</span>
        </div>
        <div class="expertise-item">
          <div class="expertise-icon">
            <Icon name="tabler:search" />
          </div>
          <span class="expertise-name">SEO technique</span>
        </div>
        <div class="expertise-item">
          <div class="expertise-icon">
            <Icon name="tabler:rocket" />
          </div>
          <span class="expertise-name">Performance</span>
        </div>
        <div class="expertise-item">
          <div class="expertise-icon">
            <Icon name="tabler:report-analytics" />
          </div>
          <span class="expertise-name">Analytics</span>
        </div>
        <div class="expertise-item">
          <div class="expertise-icon">
            <Icon name="tabler:world" />
          </div>
          <span class="expertise-name">Multilingue</span>
        </div>
      </div>
    </div>

    <div class="cta-container">
      <a target="_blank" href="https://cal.com/arthur-noellec/appel-decouverte" class="btn btn-primary btn-lg">
        <Icon name="tabler:messages" />
        <span>Discuter avec l'équipe</span>
      </a>
      <p class="cta-hint">Découvrez comment notre expertise peut transformer votre boutique</p>
    </div>
  </div>
</section>

<style>
  .equipe-section {
    padding: 6rem 0;
    background-color: var(--surface);
    border-radius: var(--radius-lg);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .section-tag {
    display: inline-block;
    background-color: rgba(57, 255, 20, 0.15);
    color: var(--accent);
    padding: 0.5rem 1rem;
    border-radius: var(--radius);
    font-weight: 600;
    font-size: 0.875rem;
    text-transform: uppercase;
    margin-bottom: 1rem;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 800;
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  .section-subtitle {
    font-size: 1.125rem;
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .team-member {
    display: flex;
    gap: 1.5rem;
    background-color: var(--surface-light);
    border-radius: var(--radius-lg);
    border: 1px solid var(--border);
    padding: 1.5rem;
    transition: var(--transition);
  }

  .team-member:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-md);
    border-color: var(--accent);
  }

  .member-photo {
    width: 120px;
    flex-shrink: 0;
    position: relative;
  }

  .member-photo img {
    width: 100%;
    height: 120px;
    object-fit: cover;
    border-radius: var(--radius);
  }

  .member-social {
    display: flex;
    gap: 0.5rem;
    position: absolute;
    bottom: -0.75rem;
    left: 50%;
    transform: translateX(-50%);
    opacity: 0;
    transition: var(--transition);
  }

  .team-member:hover .member-social {
    opacity: 1;
    bottom: -1rem;
  }

  .social-link {
    width: 2rem;
    height: 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--accent);
    color: var(--surface);
    border-radius: 50%;
    font-size: 1rem;
    transition: var(--transition);
  }

  .social-link:hover {
    transform: translateY(-3px);
    box-shadow: var(--shadow-sm);
  }

  .member-info {
    flex-grow: 1;
  }

  .member-name {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 0.25rem;
  }

  .member-role {
    display: block;
    color: var(--accent);
    font-weight: 600;
    font-size: 0.875rem;
    margin-bottom: 0.75rem;
  }

  .member-description {
    color: var(--text-secondary);
    font-size: 0.875rem;
    margin-bottom: 1rem;
    line-height: 1.5;
  }

  .member-skills {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .skill {
    font-size: 0.75rem;
    background-color: var(--surface);
    color: var(--text-secondary);
    padding: 0.25rem 0.5rem;
    border-radius: var(--radius-sm);
    white-space: nowrap;
  }

  .expertise-container {
    background-color: var(--surface-light);
    border-radius: var(--radius-lg);
    border: 1px solid var(--border);
    padding: 2.5rem;
    margin-bottom: 4rem;
  }

  .expertise-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .expertise-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .expertise-description {
    color: var(--text-secondary);
    font-size: 0.875rem;
  }

  .expertise-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
  }

  .expertise-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 0.75rem;
  }

  .expertise-icon {
    width: 3rem;
    height: 3rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(57, 255, 20, 0.15);
    border-radius: var(--radius);
    color: var(--accent);
    font-size: 1.5rem;
    transition: var(--transition);
  }

  .expertise-item:hover .expertise-icon {
    transform: scale(1.1);
  }

  .expertise-name {
    font-weight: 600;
    font-size: 0.875rem;
  }

  .cta-container {
    text-align: center;
  }

  .btn-lg {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    font-size: 1.125rem;
  }

  .cta-hint {
    margin-top: 1rem;
    font-size: 0.875rem;
    color: var(--text-secondary);
  }

  @media (max-width: 992px) {
    .team-grid {
      grid-template-columns: 1fr;
    }

    .expertise-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 768px) {
    .section-title {
      font-size: 2rem;
    }

    .team-member {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .member-photo {
      width: 150px;
      margin-bottom: 1rem;
    }

    .member-social {
      opacity: 1;
      bottom: -1rem;
    }

    .member-skills {
      justify-content: center;
    }

    .expertise-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 480px) {
    .expertise-grid {
      grid-template-columns: 1fr;
    }

    .expertise-container {
      padding: 1.5rem;
    }
  }
</style>