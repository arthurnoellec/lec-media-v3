<style>
.ux-tools-section {
  padding: 4rem 2rem;
  max-width: 1200px;
  margin: 0 auto;
}

.section-header {
  text-align: center;
  margin-bottom: 3rem;
}

.section-header h2 {
  font-size: 2.5rem;
  font-weight: 700;
  margin-bottom: 0.5rem;
  color: var(--text);
}

.section-header p {
  font-size: 1.125rem;
  color: var(--text-secondary);
  max-width: 600px;
  margin: 0 auto;
}

.gradient-text {
  background: linear-gradient(90deg, var(--accent), var(--accent-light));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  color: transparent;
}

/* BentoBox Layout */
.tools-bentobox {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  grid-template-rows: repeat(2, auto);
  gap: 1.5rem;
}

.bento-box {
  background-color: var(--surface);
  border-radius: var(--radius-lg);
  border: 1px solid var(--border);
  padding: 1.5rem;
  transition: var(--transition);
}

.bento-box:hover {
  transform: translateY(-5px);
  box-shadow: var(--shadow-md);
  border-color: var(--accent);
}

.design-box {
  grid-column: span 2;
  grid-row: 1;
}

.prototype-box {
  grid-column: span 2;
  grid-row: 1;
}

.research-box {
  grid-column: span 2;
  grid-row: 2;
}

.dev-box {
  grid-column: 1 / span 1;
  grid-row: 2;
}

.testing-box {
  grid-column: 4 / span 1;
  grid-row: 2;
}

.box-header {
  margin-bottom: 1.5rem;
}

.box-header h3 {
  font-size: 1.25rem;
  font-weight: 700;
  color: var(--text);
  display: inline-block;
  position: relative;
}

.box-header h3::after {
  content: "";
  position: absolute;
  left: 0;
  bottom: -0.5rem;
  width: 2rem;
  height: 2px;
  background-color: var(--accent);
  border-radius: 1px;
}

/* Tool Logos */
.tool-logos {
  display: flex;
  flex-wrap: wrap;
  gap: 1.5rem;
  justify-content: center;
}

.tool-logo {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.75rem;
  transition: var(--transition);
}

.tool-logo:hover {
  transform: translateY(-5px);
}

.logo-icon {
  width: 3.5rem;
  height: 3.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
}

.logo-icon svg {
  width: 100%;
  height: 100%;
}

.logo-name {
  font-size: 0.875rem;
  color: var(--text-secondary);
  font-weight: 500;
  text-align: center;
}

/* Responsive */
@media (max-width: 992px) {
  .tools-bentobox {
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: auto;
  }

  .design-box,
  .prototype-box,
  .research-box,
  .dev-box,
  .testing-box {
    grid-column: span 1;
  }

.tools-bentobox {
    display: flex;
    flex-wrap: wrap;
}
.bento-box {
    width: 100%;
}
}

@media (max-width: 576px) {
  .tools-bentobox {
    grid-template-columns: 1fr;
  }

  .design-box,
  .prototype-box,
  .research-box,
  .dev-box,
  .testing-box {
    grid-column: 1;
  }
}
</style>