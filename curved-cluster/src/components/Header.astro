<nav class="navbar">
  <div class="nav-menu">
    <!-- Hamburger menu for mobile -->
    <button class="hamburger" id="hamburgerBtn">
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
    </button>

    <!-- Mobile menu container -->
    <div class="nav-items-container" id="mobileMenu">
      <div class="nav-item">
        <div class="nav-link" id="servicesLink">Services</div>
        <div class="dropdown" id="servicesDropdown">
          <a href="/agence-cro" class="dropdown-item">
