  <style>
    .pricing-section {
      padding: 6rem 0;
      background-color: var(--surface-light);
    }
  
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 1.5rem;
    }
  
    .section-header {
      text-align: center;
      margin-bottom: 4rem;
    }
  
    .section-header h2 {
      font-size: 2.5rem;
      margin-bottom: 1rem;
    }
  
    .section-subtitle {
      font-size: 1.25rem;
      color: var(--text-secondary);
      max-width: 700px;
      margin: 0 auto;
    }
  
    .pricing-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
      margin-bottom: 4rem;
    }
  
    .pricing-card {
      background-color: var(--surface);
      border-radius: var(--radius-lg);
      border: 1px solid var(--border);
      overflow: hidden;
      transition: var(--transition);
      position: relative;
    }
  
    .pricing-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 30px rgba(57, 255, 20, 0.1);
      border-color: var(--accent);
    }
  
    .pricing-card.featured {
      border-color: var(--accent);
      box-shadow: 0 10px 30px rgba(57, 255, 20, 0.15);
    }
  
    .plan-badge {
      position: absolute;
      top: 12px;
      right: 12px;
      background: linear-gradient(135deg, rgba(57, 255, 20, 0.9), rgba(57, 255, 20, 0.7));
      color: #000000;
      font-size: 0.75rem;
      font-weight: 600;
      padding: 0.25rem 0.75rem;
      border-radius: 20px;
    }
  
    .pricing-header {
      padding: 2rem;
      border-bottom: 1px solid var(--border);
      text-align: center;
    }
  
    .pricing-header h3 {
      font-size: 1.5rem;
      margin-bottom: 1rem;
    }
  
    .pricing-price {
      margin-bottom: 1rem;
    }
  
    .price {
      font-size: 2.5rem;
      font-weight: 700;
    }
  
    .pricing-description {
      font-size: 0.9rem;
      color: var(--text-secondary);
      line-height: 1.5;
    }
  
    .pricing-features {
      padding: 2rem;
    }
  
    .pricing-features ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }
  
    .pricing-features li {
      display: flex;
      align-items: flex-start;
      margin-bottom: 1rem;
      font-size: 0.95rem;
    }
  
    .feature-icon {
      margin-right: 0.75rem;
      width: 20px;
      flex-shrink: 0;
      font-weight: 700;
    }
  
    .feature-included .feature-icon {
      color: var(--accent);
    }
  
    .feature-excluded .feature-icon {
      color: #ff6b6b;
    }
  
    .feature-excluded .feature-text {
      color: var(--text-secondary);
      text-decoration: line-through;
      opacity: 0.7;
    }
  
    .pricing-cta {
      padding: 0 2rem 2rem;
      text-align: center;
    }
  
    @media (max-width: 992px) {
      .pricing-grid {
        grid-template-columns: 1fr;
        max-width: 500px;
        margin-left: auto;
        margin-right: auto;
      }
    }
  
    @media (max-width: 768px) {
      .pricing-section {
        padding: 4rem 0;
      }
  
      .section-header {
        margin-bottom: 3rem;
      }
  
      .section-header h2 {
        font-size: 2rem;
      }
    }
  </style>