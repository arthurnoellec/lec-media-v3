  <style>
    .partnership {
      padding: 6rem 0;
    }
  
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 1.5rem;
    }
  
    .partnership-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
      align-items: start;
    }
  
    .partnership-content h2 {
      font-size: 2.25rem;
      margin-bottom: 1.5rem;
    }
  
    .partnership-intro {
      font-size: 1.15rem;
      color: var(--text-secondary);
      margin-bottom: 2.5rem;
      line-height: 1.6;
    }
  
    .tech-features {
      display: grid;
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  
    .tech-feature {
      display: flex;
      gap: 1rem;
      align-items: flex-start;
    }
  
    .tech-icon {
      width: 50px;
      height: 50px;
      background-color: rgba(57, 255, 20, 0.1);
      border-radius: var(--radius);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.5rem;
      flex-shrink: 0;
    }
  
    .tech-info h3 {
      font-size: 1.15rem;
      margin-bottom: 0.5rem;
    }
  
    .tech-info p {
      font-size: 0.9rem;
      color: var(--text-secondary);
      line-height: 1.5;
    }
  
    .integration-showcase {
      background-color: var(--surface);
      border-radius: var(--radius-lg);
      border: 1px solid var(--border);
      overflow: hidden;
    }
  
    .integration-header {
      background-color: var(--surface-light);
      padding: 1.5rem;
      border-bottom: 1px solid var(--border);
    }
  
    .integration-header h3 {
      font-size: 1.5rem;
      margin: 0;
    }
  
    .ecommerce-flow {
      padding: 2rem;
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }
  
    .flow-step {
      display: flex;
      gap: 1rem;
      align-items: flex-start;
    }
  
    .flow-icon {
      width: 36px;
      height: 36px;
      background: linear-gradient(135deg, rgba(57, 255, 20, 0.7), rgba(57, 255, 20, 0.3));
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 700;
      color: var(--surface);
      flex-shrink: 0;
    }
  
    .flow-screenshot {
      flex-grow: 1;
    }
  
    .flow-caption {
      font-size: 0.85rem;
      color: var(--text-secondary);
      margin-top: 0.75rem;
      text-align: center;
    }
  
    .flow-arrow {
      margin: 0 auto;
      font-size: 1.5rem;
      color: var(--accent);
      transform: rotate(90deg);
    }
  
    .browser-mockup {
      border-radius: var(--radius);
      overflow: hidden;
      border: 1px solid var(--border);
      background-color: #fff;
      color: #333;
    }
  
    .browser-header {
      background-color: #f5f5f5;
      padding: 0.5rem;
      display: flex;
      align-items: center;
      border-bottom: 1px solid #ddd;
    }
  
    .browser-actions {
      display: flex;
      gap: 0.25rem;
      margin-right: 0.75rem;
    }
  
    .browser-actions span {
      width: 12px;
      height: 12px;
      border-radius: 50%;
      background-color: #ddd;
    }
  
    .browser-actions span:nth-child(1) {
      background-color: #ff5f57;
    }
  
    .browser-actions span:nth-child(2) {
      background-color: #ffbd2e;
    }
  
    .browser-actions span:nth-child(3) {
      background-color: #28ca41;
    }
  
    .browser-address {
      background-color: #fff;
      border-radius: 4px;
      padding: 0.25rem 0.5rem;
      font-size: 0.75rem;
      flex-grow: 1;
    }
  
    .browser-content {
      padding: 1rem;
      height: 180px;
    }
  
    .product-mock {
      display: flex;
      gap: 1rem;
      height: 100%;
    }
  
    .mock-3d-area {
      flex: 1;
      background-color: #f9f9f9;
      border-radius: 4px;
      display: flex;
      align-items: center;
      justify-content: center;
    }
  
    .mock-cube-container {
      width: 100px;
      height: 100px;
      perspective: 400px;
      transform: scale(0.7);
    }
  
    .mock-cube {
      width: 100%;
      height: 100%;
      position: relative;
      transform-style: preserve-3d;
      animation: rotate 15s infinite linear;
    }
  
    .mock-face {
      position: absolute;
      width: 100%;
      height: 100%;
      opacity: 0.7;
      border: 1px solid black;
      background-color: rgba(57, 255, 20, 0.1);
    }
  
    .mock-face.front {
      transform: translateZ(50px);
    }
  
    .mock-face.back {
      transform: translateZ(-50px) rotateY(180deg);
    }
  
    .mock-face.right {
      transform: translateX(50px) rotateY(90deg);
    }
  
    .mock-face.left {
      transform: translateX(-50px) rotateY(-90deg);
    }
  
    .mock-face.top {
      transform: translateY(-50px) rotateX(90deg);
    }
  
    .mock-face.bottom {
      transform: translateY(50px) rotateX(-90deg);
    }
  
    .mock-options {
      width: 40%;
      padding-left: 1rem;
      border-left: 1px solid #eee;
    }
  
    .mock-option-group {
      margin-bottom: 1rem;
    }
  
    .mock-option-label {
      font-size: 0.75rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
    }
  
    .mock-option-items {
      display: flex;
      gap: 0.5rem;
    }
  
    .mock-color {
      width: 20px;
      height: 20px;
      border-radius: 50%;
      border: 1px solid #ddd;
      cursor: pointer;
    }
  
    .mock-color.active {
      outline: 2px solid var(--accent);
      outline-offset: 2px;
    }
  
    .cart-mock {
      height: 100%;
      display: flex;
      flex-direction: column;
    }
  
    .cart-item {
      display: flex;
      gap: 1rem;
      padding-bottom: 1rem;
      border-bottom: 1px solid #eee;
    }
  
    .cart-thumb {
      width: 60px;
      height: 60px;
      background-color: #f0f0f0;
      border-radius: 4px;
    }
  
    .cart-details {
      flex-grow: 1;
    }
  
    .cart-title {
      font-weight: 600;
      margin-bottom: 0.5rem;
      font-size: 0.9rem;
    }
  
    .cart-options {
      font-size: 0.75rem;
      color: #666;
    }
  
    .cart-option {
      margin-bottom: 0.25rem;
    }
  
    .cart-price {
      font-weight: 600;
      font-size: 0.9rem;
    }
  
    .cart-totals {
      margin-top: auto;
      padding-top: 1rem;
    }
  
    .cart-total-row {
      display: flex;
      justify-content: space-between;
      font-weight: 600;
      margin-bottom: 1rem;
    }
  
    .mock-checkout {
      width: 100%;
      background-color: var(--accent);
      color: #fff;
      border: none;
      padding: 0.5rem;
      border-radius: 4px;
      font-weight: 600;
      cursor: pointer;
    }
  
    .admin-mock {
      height: 100%;
    }
  
    .admin-header {
      margin-bottom: 1rem;
      padding-bottom: 0.5rem;
      border-bottom: 1px solid #eee;
    }
  
    .admin-header h4 {
      font-size: 1rem;
      margin: 0;
    }
  
    .admin-order-item {
      padding: 1rem;
      background-color: #f9f9f9;
      border-radius: 4px;
    }
  
    .admin-item-name {
      font-weight: 600;
      margin-bottom: 0.75rem;
    }
  
    .admin-config-detail {
      display: flex;
      margin-bottom: 0.5rem;
      font-size: 0.85rem;
    }
  
    .detail-label {
      width: 120px;
      color: #666;
    }
  
    .detail-value {
      font-weight: 500;
    }
  
    .integrated-platforms {
      padding: 1.5rem 2rem;
      border-top: 1px solid var(--border);
      text-align: center;
    }
  
    .integrated-platforms h4 {
      font-size: 1.1rem;
      margin-bottom: 1rem;
    }
  
    .platform-logos {
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      gap: 1rem;
    }
  
    .platform-logo {
      padding: 0.5rem 1rem;
      background-color: var(--surface-light);
      border-radius: var(--radius);
      font-size: 0.85rem;
      font-weight: 600;
    }
  
    @media (max-width: 992px) {
      .partnership-grid {
        grid-template-columns: 1fr;
        gap: 3rem;
      }
  
      .tech-features {
        grid-template-columns: 1fr;
      }
    }
  
    @media (max-width: 768px) {
      .partnership {
        padding: 4rem 0;
      }
    }
  </style>