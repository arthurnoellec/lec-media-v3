                  <div class="funnel-step fs-2">
                    <div class="funnel-step-label"></div>
                    <div class="funnel-bar"></div>
                    <div class="funnel-value"></div>
                  </div>
                  <div class="funnel-step fs-3">
                    <div class="funnel-step-label"></div>
                    <div class="funnel-bar"></div>
