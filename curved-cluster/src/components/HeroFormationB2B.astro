<script>
  // Animation des cartes de parcours
  document.addEventListener('DOMContentLoaded', () => {
    const nodes = [
      document.getElementById('node-1'),
      document.getElementById('node-2'),
      document.getElementById('node-3')
    ];
    
    // √âtat de l'animation
    let step = 0;
    
    // Fonction d'animation qui g√®re la s√©quence compl√®te
    function animateJourney() {
      // R√©initialiser toutes les cartes quand on atteint l'√©tape finale
      if (step === 4) {
        nodes.forEach(node => {
          node.classList.remove('active');
        });
        step = 0;
        setTimeout(animateJourney, 1000); // Pause avant de recommencer
        return;
      }
      
      if (step < 3) {
        // Allumer progressivement chaque carte
        nodes[step].classList.add('active');
      }
      
      step++;
      setTimeout(animateJourney, 1000);
    }
    
    // Ajouter une transition CSS pour un allumage doux
    nodes.forEach(node => {
      node.style.transition = 'all 0.3s ease-in-out';
    });
    
    // D√©marrer l'animation
    animateJourney();
  });
</script>