<style>
  /* Styles de base */
  .data-expertise {
    padding: 6rem 0;
    background-color: var(--background);
  }
  
  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  
  .content-wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: start; /* Changez de 'center' à 'start' */
    position: relative;
  }
  
  /* Section des expertises */
  .expertise-details {
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }
  
  .section-header {
    margin-bottom: 1rem;
  }
  
  .section-header h2 {
    font-size: 1.5rem;
    color: var(--accent);
    margin-bottom: 0.5rem;
  }
  
  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--text);
    margin: 0;
  }
  
  .expertise-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }
  
  .expertise-item {
    display: flex;
    gap: 1.5rem;
    padding: 1.5rem;
    border-radius: var(--radius-lg);
    background-color: var(--surface);
    border: 1px solid var(--border);
    transition: transform 0.3s ease, border-color 0.3s ease, box-shadow 0.3s ease;
  }
  
  .expertise-item:hover {
    transform: translateY(-5px);
    border-color: var(--accent);
    box-shadow: 0 10px 30px rgba(2, 247, 145, 0.1);
  }
  
  .expertise-icon {
    flex-shrink: 0;
    width: 50px;
    height: 50px;
    border-radius: 12px;
    background-color: var(--surface-light);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--accent);
  }
  
  .expertise-content {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .expertise-content h3 {
    font-size: 1.25rem;
    margin: 0;
    color: var(--text);
  }
  
  .expertise-content p {
    color: var(--text-secondary);
    margin: 0 0 0.75rem 0;
    line-height: 1.6;
  }
  
  .expertise-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--accent);
    font-weight: 500;
    transition: gap 0.3s ease;
    width: fit-content;
  }
  
  .expertise-link:hover {
    gap: 0.75rem;
  }
  
  .expertise-link svg {
    transition: transform 0.3s ease;
  }
  
  .expertise-link:hover svg {
    transform: translateX(3px);
  }
  
  .image-column {
  position: sticky;
  top: 100px; /* Ajustez selon votre design */
  align-self: start;
  max-height: calc(100vh - 120px);
  overflow: hidden;
}

  
  /* Responsive design */
  @media (max-width: 1100px) {
    .content-wrapper {
      gap: 3rem;
      grid-template-columns: 1fr;
    }
  }
  
  @media (max-width: 992px) {
    .content-wrapper {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
    
    .image-wrapper {
      max-width: 100%;
    }

    .image-column {
    position: static;
    max-height: none;
  }
  }
  
  @media (max-width: 768px) {
    .data-expertise {
      padding: 4rem 0;
    }
    
    .container {
      padding: 0 1.5rem;
    }
    
    .section-title {
      font-size: 2rem;
    }
    
    .expertise-list {
      gap: 1rem;
    }
    
    .expertise-item {
      padding: 1.25rem;
    }
  }
  
  @media (max-width: 480px) {
    .expertise-item {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }
    
    .expertise-icon {
      width: 40px;
      height: 40px;
    }
  }
</style>