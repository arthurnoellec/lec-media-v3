---
// src/pages/creation-boutique-shopify.astro
import Layout from '../layouts/Layout.astro';
import Hero from '../components/HeroCreation.astro';
import ClientLogos from '../components/ClientLogos.astro';
import ServicesCreationBoutique from '../components/ServicesCreationBoutique.astro';
import CreationProcess from '../components/CreationProcess.astro';
import Portfolio from '../components/Portfolio.astro';
import CTASection from '../components/CTASection.astro';
import FAQ from '../components/FAQ.astro';
import Vsl from '../components/vsl.astro';


---

<Layout 
title="Création Boutique Shopify | E-commerce Clé en Main | LËC Media"
description="Lancez votre boutique Shopify avec un site pensé pour convertir. Design personnalisé, configuration complète et stratégie e-commerce dès le départ."
>
  <main>
    <Hero />
    <ClientLogos />
    <Vsl
    videoDesktop="/video/VSL-Creation.mp4"
    videoMobile="/video/VSL-Creation-TEL.mp4"
    poster="/images/video-thumbnail.jpg"
    autoplay={true}
    muted={true}
    loop={true}
    controls={true}
    className="hero-video"
    badgeText="Shopify – Clé en main & performant -"
  />
    <ServicesCreationBoutique />
    <CreationProcess />
    <Portfolio />
    <CTASection />
    <FAQ />
  </main>
</Layout>

<style>
  main {
    width: 100%;
    margin: 0 auto;
  }
</style>