---
// src/pages/creation-boutique-shopify.astro
import Layout from "../layouts/Layout.astro";
import Hero from "../components/HeroRefonte.astro";
import FAQ from "../components/FAQ.astro";
import CTASection from "../components/CTASection.astro";
import ClientLogos from "../components/ClientLogos.astro";
import Portfolio from "../components/Portfolio.astro";
import ProblematiquesSection from "../components/ProblematiquesSection.astro";
import EquipeSection from "../components/EquipeSection.astro";
import Vsl from "../components/vsl.astro";
---

<Layout 
title="Refonte Site E-commerce | Performances & Conversion Shopify | LËC Media"
description="Reprenez le contrôle de votre boutique en ligne avec une refonte orientée conversion. Design, UX et technique : on reconstruit votre site pour vendre plus."
>
  <>
    <Hero />
    <ClientLogos />
    <Vsl
    videoDesktop="/video/VSL-Refonte.mp4"
    videoMobile="/video/VSL-Refonte-TEL.mp4"
    poster="/images/video-thumbnail.jpg"
    autoplay={true}
    muted={true}
    loop={true}
    controls={true}
    className="hero-video"
    badgeText="Shopify – Clé en main & performant -"
  />
    <ProblematiquesSection />
    <EquipeSection />
    <Portfolio />
    <CTASection />
    <FAQ />
  </>
</Layout>

<style>
  main {
    width: 100%;
    margin: 0 auto;
  }
</style>
