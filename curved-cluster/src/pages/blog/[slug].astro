---
// src/pages/blog/[slug].astro
import Layout from '../../layouts/MainLayout.astro';
import { getCollection } from 'astro:content';

// Utilisez getCollection au lieu de Astro.glob pour plus de fiabilité
export async function getStaticPaths() {
  // Accès direct aux fichiers .md avec la Content Collections API
  const blogEntries = await getCollection('blog');
  
  return blogEntries.map((entry: { slug: string }) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

// Récupération des propriétés
import type { CollectionEntry } from 'astro:content';

const { entry } = Astro.props as { entry: CollectionEntry<'blog'> };
// Rendez le contenu Markdown en HTML de manière sûre
const { Content } = await entry.render();
---

<Layout title={entry.data.title} theme="dark">
  <article class="blog-post">
    <header class="post-header">
      <div class="container">
        <div class="post-meta">
          <div class="post-date">
            {new Date(entry.data.date).toLocaleDateString('fr-FR', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </div>
          
          {entry.data.tags && entry.data.tags.length > 0 && 
            <div class="post-tags">
              {entry.data.tags.map((tag: string) => (
                <span class="tag">{tag}</span>
              ))}
            </div>
          }
        </div>
        
        <h1 class="post-title">{entry.data.title}</h1>
        
        {entry.data.excerpt && 
          <p class="post-excerpt">{entry.data.excerpt}</p>
        }
      </div>
    </header>
    
    {entry.data.image && 
      <div class="post-featured-image">
        <img src={entry.data.image} alt={entry.data.title} />
      </div>
    }
    
    <div class="post-content-wrapper">
      <div class="container">
        <div class="post-content">
          <Content />
        </div>
      </div>
    </div>
    
    <footer class="post-footer">
<!-- Bouton retour aux articles avec style personnalisé -->
<div class="post-nav">
  <a href="/blog" class="back-to-blog">
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M19 12H5"></path>
      <path d="M12 19l-7-7 7-7"></path>
    </svg>
    Retour aux articles
  </a>
</div>

<!-- Section de partage avec icônes -->
<div class="share-section">
  <p>Partager cet article</p>
  <div class="share-buttons">
    <a href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(`https://votresite.com/blog/${entry.slug}`)}`} target="_blank" rel="noopener noreferrer" class="share-button linkedin">
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
        <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
        <rect x="2" y="9" width="4" height="12"></rect>
        <circle cx="4" cy="4" r="2"></circle>
      </svg>
      <span>LinkedIn</span>
    </a>
    <a href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(`https://votresite.com/blog/${entry.slug}`)}`} target="_blank" rel="noopener noreferrer" class="share-button facebook">
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
        <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
      </svg>
      <span>Facebook</span>
    </a>
  </div>
</div>

<style>
  /* Styles pour le bouton de retour */
  .post-nav {
    margin-bottom: 30px;
  }
  
  .back-to-blog {
    display: flex;
    align-items: center;
    gap: 8px;
    font-weight: 500;
    color: var(--text-primary, #333);
    background-color: transparent;
    padding: 8px 16px;
    border-radius: 30px;
    border: 1px solid var(--border, #e0e0e0);
    transition: all 0.3s ease;
    width: fit-content;
  }
  
  .back-to-blog:hover {
    color: var(--primary, #08f791);
    border-color: var(--primary, #08f791);
    background-color: rgba(8, 247, 145, 0.05);
    transform: translateX(-5px);
  }
  
  .back-to-blog svg {
    transition: transform 0.3s ease;
  }
  
  .back-to-blog:hover svg {
    transform: translateX(-3px);
  }
  
  /* Styles pour les boutons de partage */
  .share-section {
    margin-top: 40px;
    border-top: 1px solid var(--border, #e0e0e0);
    padding-top: 25px;
  }
  
  .share-section p {
    margin-bottom: 15px;
    font-weight: 600;
    font-size: 1rem;
    color: var(--text-primary, #333);
  }
  
  .share-buttons {
    display: flex;
    gap: 15px;
    flex-wrap: wrap;
  }
  
  .share-button {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 10px 16px;
    border-radius: 30px;
    font-size: 0.9rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
    color: white;
  }
  
  .share-button span {
    position: relative;
    top: 1px;
  }
  
  .share-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
  }
  
  .twitter {
    background-color: #1DA1F2;
  }
  
  .linkedin {
    background-color: #0077B5;
  }
  
  .facebook {
    background-color: #1877F2;
  }
  
  /* Style pour le mode sombre */
  [data-theme="dark"] .back-to-blog {
    color: var(--text-primary, #e0e0e0);
    border-color: var(--border, #444);
  }
  
  [data-theme="dark"] .back-to-blog:hover {
    background-color: rgba(8, 247, 145, 0.1);
  }
  
  [data-theme="dark"] .share-section {
    border-color: var(--border, #444);
  }
  
  [data-theme="dark"] .share-section p {
    color: var(--text-primary, #e0e0e0);
  }
  
  /* Ajustements responsive */
  @media (max-width: 480px) {
    .share-buttons {
      gap: 10px;
    }
    
    .share-button {
      padding: 8px 12px;
      font-size: 0.8rem;
    }
    
    .share-button svg {
      width: 16px;
      height: 16px;
    }
  }
</style>
    </footer>
  </article>
</Layout>

<style>
  .blog-post {
    display: flex;
    flex-direction: column;
    width: 100%;
  }
  
  .container {
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .post-header {
    padding: 110px 0 40px;
    text-align: center;
  }
  
  .post-meta {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    gap: 15px;
    margin-bottom: 25px;
    font-size: 0.9rem;
  }
  
  .post-date {
    color: var(--text-secondary);
  }
  
  .post-tags {
    display: flex;
    gap: 8px;
  }
  
  .tag {
    background-color: var(--tag-bg);
    color: var(--tag-text);
    padding: 3px 12px;
    border-radius: 20px;
    font-size: 0.8rem;
    transition: background-color 0.2s;
  }
  
  .tag:hover {
    background-color: var(--primary);
    color: white;
  }
  
  .post-title {
    font-size: 2.8rem;
    line-height: 1.2;
    margin-bottom: 20px;
    font-weight: 700;
  }
  
  .post-excerpt {
    font-size: 1.2rem;
    color: var(--text-secondary);
    line-height: 1.6;
    max-width: 700px;
    margin: 0 auto;
  }
  
  .post-featured-image {
    width: 100%;
    max-height: 500px;
    overflow: hidden;
    margin-bottom: 50px;
  }
  
  .post-featured-image img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }
  
  .post-content-wrapper {
    padding-bottom: 60px;
  }
  
  .post-content {
    font-size: 1.1rem;
    line-height: 1.8;
  }
  
  .post-content h2 {
    font-size: 1.8rem;
    margin-top: 40px;
    margin-bottom: 20px;
    padding-bottom: 8px;
    border-bottom: 1px solid var(--border);
  }
  
  .post-content h3 {
    font-size: 1.4rem;
    margin-top: 30px;
    margin-bottom: 15px;
  }
  
  .post-content p {
    margin-bottom: 25px;
  }
  
  .post-content ul, .post-content ol {
    margin-bottom: 25px;
    padding-left: 25px;
  }
  
  .post-content li {
    margin-bottom: 10px;
  }
  
  .post-content blockquote {
    border-left: 4px solid var(--primary);
    padding-left: 20px;
    margin-left: 0;
    margin-right: 0;
    margin-bottom: 25px;
    font-style: italic;
    color: var(--text-secondary);
  }
  
  .post-content img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 30px 0;
  }
  
  .post-content pre {
    background-color: var(--code-bg);
    padding: 20px;
    border-radius: 8px;
    overflow-x: auto;
    margin: 30px 0;
  }
  
  .post-content code {
    font-family: 'SFMono-Regular', Consolas, 'Liberation Mono', Menlo, monospace;
    font-size: 0.9em;
  }
  
  .post-footer {
    border-top: 1px solid var(--border);
    padding: 40px 0 60px;
    max-width: 1000px;
    margin: auto;
    width: 100%;
  }
  
  .post-nav {
    margin-bottom: 30px;
  }
  
  .back-to-blog {
    display: inline-block;
    margin-bottom: 20px;
    font-weight: 500;
    transition: color 0.2s;
  }
  
  .back-to-blog:hover {
    color: var(--primary);
  }
  
  .share-section {
    margin-top: 20px;
    display: flex;
    flex-wrap: wrap;
    flex-direction: column;
    justify-content: center;
    align-items: center;

  }
  
  .share-section p {
    margin-bottom: 10px;
    font-weight: 500;
  }
  
  .share-buttons {
    display: flex;
    gap: 10px;
  }
  
  .share-button {
    padding: 8px 16px;
    border-radius: 4px;
    font-size: 0.9rem;
    text-decoration: none;
    transition: opacity 0.2s;
  }
  
  .share-button:hover {
    opacity: 0.8;
    text-decoration: none;
  }
  
  .twitter {
    background-color: #1DA1F2;
    color: white;
  }
  
  .linkedin {
    background-color: #0077B5;
    color: white;
  }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .post-header {
      padding: 40px 0 30px;
    }
    
    .post-title {
      font-size: 2.2rem;
    }
    
    .post-excerpt {
      font-size: 1.1rem;
    }
    
    .post-content {
      font-size: 1rem;
    }
    
    .post-content h2 {
      font-size: 1.6rem;
    }
    
    .post-content h3 {
      font-size: 1.3rem;
    }
  }
</style>