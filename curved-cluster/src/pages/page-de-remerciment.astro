<style>
  main {
    width: 100%;
    margin: 0 auto;
  }

  .merci {
    min-height: calc(100vh - 200px);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 4rem 1rem;
  }

  .merci-container {
    max-width: 800px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .icon-success {
    margin-bottom: 2rem;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0% {
      transform: scale(1);
      opacity: 1;
    }
    50% {
      transform: scale(1.1);
      opacity: 0.8;
    }
    100% {
      transform: scale(1);
      opacity: 1;
    }
  }

  .message-confirmation {
    font-size: 1.25rem;
    max-width: 600px;
    margin-bottom: 3rem;
    color: var(--text-secondary);
  }

  .next-steps {
    width: 100%;
    margin: 2.5rem 0;
  }

  .next-step-card {
    background-color: var(--surface-light);
    border-color: var(--border);
    text-align: left;
    position: relative;
    overflow: hidden;
    padding: 2.5rem;
  }

  .next-step-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 100%;
    background: linear-gradient(to bottom, var(--accent), var(--accent-dark));
  }

  .next-step-card h3 {
    margin-bottom: 1rem;
    font-size: 1.8rem;
  }

  .excitement-text {
    font-size: 1.2rem;
    margin-bottom: 1.5rem;
    font-weight: 500;
    color: var(--text);
  }

  .boom-text {
    font-weight: 800;
    font-size: 1.4rem;
    color: var(--accent);
    position: relative;
    display: inline-block;
    animation: boom 1.5s infinite;
  }

  @keyframes boom {
    0% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.2);
    }
    100% {
      transform: scale(1);
    }
  }

  .next-step-card ul {
    list-style-type: none;
    padding-left: 0;
  }

  .fun-item {
    margin-bottom: 1.2rem;
    padding-left: 2rem;
    position: relative;
    color: var(--text-secondary);
    transition: all 0.3s ease;
  }

  .fun-item:hover {
    transform: translateX(5px);
    color: var(--text);
  }

  .fun-item::before {
    content: "üî•";
    position: absolute;
    left: 0;
  }

  .excitement-bar {
    height: 8px;
    width: 100%;
    background-color: var(--surface);
    border-radius: 4px;
    margin-top: 2rem;
    overflow: hidden;
    position: relative;
  }

  .excitement-progress {
    position: absolute;
    height: 100%;
    width: 30%;
    background: linear-gradient(90deg, var(--accent-dark), var(--accent));
    border-radius: 4px;
    animation: progress 3s infinite alternate;
  }

  @keyframes progress {
    0% {
      width: 30%;
      background: linear-gradient(90deg, var(--accent-dark), var(--accent));
    }
    100% {
      width: 100%;
      background: linear-gradient(90deg, var(--accent), #00ffff);
    }
  }

  .action-buttons {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
  }

  @media (max-width: 768px) {
    .action-buttons {
      flex-direction: column;
      width: 100%;
    }

    .btn {
      width: 100%;
    }
  }
</style>