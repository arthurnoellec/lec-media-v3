    document.addEventListener('DOMContentLoaded', function() {
      // Gestion des onglets
      const tabs = document.querySelectorAll('.element-tab');
      const contents = document.querySelectorAll('.element-content');
      
      tabs.forEach(tab => {
        tab.addEventListener('click', () => {
          // Désactiver tous les onglets
          tabs.forEach(t => t.classList.remove('active'));
          // Activer l'onglet cliqué
          tab.classList.add('active');
          
          // Cacher tous les contenus
          contents.forEach(content => content.classList.remove('active'));
          // Afficher le contenu correspondant
          const tabId = tab.getAttribute('data-tab');
          document.getElementById(tabId).classList.add('active');
        });
      });
      
      // Animation des hotspots
      const hotspots = document.querySelectorAll('.hotspot');
      hotspots.forEach((hotspot, index) => {
        setTimeout(() => {
          hotspot.classList.add('visible');
        }, 300 * index);
      });
      
      // Interaction liste et hotspots
      const listItems = document.querySelectorAll('.element-list li');
      listItems.forEach(item => {
        const element = item.getAttribute('data-element');
        
        // Survol d'un élément de la liste
        item.addEventListener('mouseenter', () => {
          const hotspot = document.querySelector(`.hotspot[data-element="${element}"]`);
          if (hotspot) hotspot.classList.add('highlight');
        });
        
        item.addEventListener('mouseleave', () => {
          const hotspot = document.querySelector(`.hotspot[data-element="${element}"]`);
          if (hotspot) hotspot.classList.remove('highlight');
        });
      });
    });
