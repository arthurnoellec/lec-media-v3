<script>
  // Animation des tabs pour la section éléments
  const elementTabs = document.querySelectorAll('.element-tab');
  const elementContents = document.querySelectorAll('.element-content');
  
  elementTabs.forEach(tab => {
    tab.addEventListener('click', () => {
      // Retirer la classe active de tous les tabs
      elementTabs.forEach(t => t.classList.remove('active'));
      
      // Ajouter la classe active au tab cliqué
      tab.classList.add('active');
      
      // Masquer tous les contenus
      elementContents.forEach(content => content.classList.remove('active'));
      
      // Afficher le contenu correspondant
      const targetId = tab.getAttribute('data-target');
      const targetContent = document.getElementById(targetId);
      targetContent.classList.add('active');
    });
  });
  
  // Animation des hotspots
  const hotspots = document.querySelectorAll('.hotspot');
  
  hotspots.forEach((hotspot, index) => {
    setTimeout(() => {
      hotspot.classList.add('pulse');
    }, index * 300);
  });
  
  // Effet de hover sur les éléments de la liste
  const elementListItems = document.querySelectorAll('.element-list li');
  
  elementListItems.forEach(item => {
    item.addEventListener('mouseenter', () => {
      const text = item.querySelector('span').textContent;
      
      // Trouver le hotspot correspondant
      const hotspot = document.querySelector(`.hotspot[data-label="${text}"]`);
      
      if (hotspot) {
        hotspot.classList.add('highlight');
      }
    });
    
    item.addEventListener('mouseleave', () => {
      const text = item.querySelector('span').textContent;
      
      // Trouver le hotspot correspondant
      const hotspot = document.querySelector(`.hotspot[data-label="${text}"]`);
      
      if (hotspot) {
        hotspot.classList.remove('highlight');
      }
    });
  });
  
  // Animation du site web dans la section méthodologie
  const websiteA = document.querySelector('.website-a');
  const websiteB = document.querySelector('.website-b');
  const conversionRates = document.querySelectorAll('.conversion-rate');
  
  // Observer pour démarrer l'animation quand visible
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        websiteA.classList.add('animate');
        setTimeout(() => {
          websiteB.classList.add('animate');
        }, 1000);
        
        setTimeout(() => {
          conversionRates.forEach(rate => {
            rate.classList.add('animate');
          });
        }, 2000);
        
        observer.unobserve(entry.target);
      }
    });
  }, { threshold: 0.3 });
  
  observer.observe(document.querySelector('.methodology-animation'));
</script>

