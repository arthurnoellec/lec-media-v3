---
export interface Props {
  title: string;
  description?: string;
}

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { title, description = "Boostez vos conversions e-commerce grâce à notre service d'abonnement mensuel de CRO. Nos experts optimisent votre site pour convertir plus de visiteurs en clients." } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Préchargement critique CSS -->
    <style>
      /* Style minimal pour éviter le FOUC (Flash of Unstyled Content) */
      body {
        background-color: #161616;
        color: #ffffff;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        margin: 0;
        padding: 0;
      }
      
      /* Styles critiques pour le texte du Hero (LCP) */
      .Hero_header_gauche > div > p {
        color: white;
        font-size: 18px;
        line-height: 1.6;
        margin-bottom: 1rem;
      }
    </style>
    
    <!-- Préconnexion aux domaines tiers -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    
    <!-- Font avec display=swap pour un rendu non-bloquant -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" media="print" onload="this.media='all'">
    
    <!-- Fallback si le chargement asynchrone échoue -->
    <noscript>
      <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    </noscript>
    
    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <meta name="keywords" content="CRO, optimisation taux de conversion, e-commerce, audit CRO, test A/B, UX, UI, analytics, abonnement CRO, ROI e-commerce" />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://lec-media.agency" />
    <meta property="og:image" content="/images/og-image-cro.jpg" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/images/twitter-image-cro.jpg" />
    
    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Service",
        "name": "Abonnement mensuel CRO - Optimisation E-commerce",
        "description": "Service d'optimisation du taux de conversion pour e-commerce, incluant audits CRO, tests A/B, optimisation UI/UX et analyse de données.",
        "provider": {
          "@type": "Organization",
          "name": "LËC Media",
          "url": "https://lec-media.agency"
        },
        "offers": {
          "@type": "Offer",
          "price": "990",
          "priceCurrency": "EUR",
          "availability": "https://schema.org/InStock"
        }
      }
    </script>

