---
// Importer les styles
import './styles/cta-button.css';

interface Props {
  href: string;
  text: string;
  target?: '_blank' | '_self' | '_parent' | '_top';
}

const { href, text, target = '_blank' } = Astro.props;
---

<div class="btn_call_hero">
  <a 
    style="text-decoration: none; color: white"
    href={href}
    target={target}>
    <button class="bookmarkBtn">
      <span class="IconContainer">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          width="32"
          height="32"
          fill="FFFFFF">
          <path
            d="M16.1716 10.9999L10.8076 5.63589L12.2218 4.22168L20 11.9999L12.2218 19.778L10.8076 18.3638L16.1716 12.9999H4V10.9999H16.1716Z"></path>
        </svg>
      </span>
      <p class="text" style="text-transform: uppercase">{text}</p>
    </button>
  </a>
</div>